<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieCatalog" parent="android:Theme.Material.Light.NoActionBar" >
        <item name = "android:windowTranslucentStatus">true</item>
        <item name = "android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>                   <!--header background-->
        <item name="android:windowBackground">@color/background</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/primary</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/secondary</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/secondary</item>    <!--days of the week-->
    </style>

</resources>